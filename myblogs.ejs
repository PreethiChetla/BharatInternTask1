<!DOCTYPE html>
<html>
<head>
  <title>My Blogs</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-image: url("https://i.pinimg.com/564x/8f/c7/19/8fc719ea1aff1c5555d84db1d09cf237.jpg");
      background-repeat: no-repeat;
      background-size: 100% 100%;
      background-position: center;
      margin: 0;
      padding: 20px;
    }

    h1 {
      text-align: center;
      margin-bottom: 30px;
    }

    .blog-post {
      background-color: #fff;
      border-radius: 5px;
      padding: 20px;
      margin-bottom: 20px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      max-width: 650px;
      /* margin-left:0 auto; */
      margin: 0 auto;
      margin-bottom: 20px;
    }

    .blog-post h2 {
      margin-bottom: 10px;
    }

    .blog-post p {
      margin-bottom: 10px;
      line-height: 1.4;
    }

    .blog-post .options {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 15px;
    }

    .blog-post img {
      width: 100%;
      max-height: 200px;
      object-fit: cover;
      border-radius: 5px;
      margin-bottom: 10px;
    }

    .options-bar {
      display: flex;
      justify-content: flex-end;
      margin-bottom: 20px;
    }

    .options-bar a {
      margin-right: 10px;
      padding: 8px 16px;
      background-color: #007bff;
      color: #fff;
      text-decoration: none;
      border-radius: 5px;
    }

    .blog-post .options a {
      padding: 8px 16px;
      background-color: #007bff;
      color: #fff;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    .blog-post .options a:hover {
      background-color: darkblue;
    }

    button {
      margin-right: 10px;
      padding: 8px 16px;
      background-color: #007bff;
      color: #fff;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s;
    }
  </style>
</head>
<body>
  <div class="options-bar">
    <a href="/">Home</a>
    <a href="/uploadblog">Upload Blog</a>
    <a href="/logout">Logout</a>
  </div>
  <h1>My Blogs</h1>
  <% blogs.forEach(blog => { %>
    <div class="blog-post">
      <img src="<%= blog.image %>" alt="Blog Image">
      <h2><%= blog.title %></h2>
      <p><%= blog.content.slice(0,100) %>...</p>
      <div class="options">
        <a href="/posts/<%= blog._id %>">Read</a>
        <form action="/delete/<%= blog._id %>" method="POST">
          <button type="submit">Delete</button>
        </form>
      </div>
    </div>
  <% }) %>
</body>
</html>